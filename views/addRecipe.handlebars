<div class="d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="card" style="height: fit-content">
      <div class="form-group m-3">
        <label for="recipe-title-add" class="form-label custom-label">Recipe Title:</label>
        <input type="text" class="form-control" id="title-add" placeholder="Add recipe name">
      </div>
      <div class="form-group m-3">
        <label for="recipe-ingredients-add" class="form-label custom-label">Ingredients</label>
        <textarea class="form-control" placeholder="Separate ingredients with comma (ex. 1 cup sugar, 2 cups flour, etc.)" id="ingredients-add" style="height: 200px"></textarea>
      </div>
      <div class="form-group m-3">
        <label for="recipe-directions-add" class="form-label custom-label">Directions:</label>
        <textarea class="form-control" placeholder="Write directions in paragraph form (ex. preheat oven to 360 degrees. Combine dry ingredients...)" id="directions-add" style="height: 200px"></textarea>
      </div>
      <div class="form-group m-3">
        <label for="cooktime-add" class="form-label custom-label">Cook Time: </label>
        <textarea class="form-control" placeholder="(ex. 20 mins)" id="cooktime-add" style="height: 200px"></textarea>
      </div>
      <div class="form-group m-3">
        <label for="comments-add" class="form-label custom-label">Comments:  </label>
        <textarea class="form-control" placeholder="Enter comments if any..." id="comments-add" style="height: 200px"></textarea>
      </div>
      <button class="btn btn-primary mb-3 mx-3" id="create-recipe" style="width:min-content; padding: .75rem;"
        type="submit">Create</button>
    </div>
  </div>
</div>



<script src="/js/addrecipe.js"></script>